<%- include("partials/header.ejs") %>

<div class="container">
  <div class="row ">
    <div class="col">
              <main role="main" class="container"></main>
              <% for(var i=0; i<jokes.length; i++) { %>
                  <div class="card" style="width: 18rem;">
            <div class="card-body">
              <p class="card-text">
                <strong class="d-block text-gray-dark"><%= jokes[i].category %> Joke</strong>
                <% if(jokes[i].type === "single"){ %>
                <%= jokes[i].joke %>
                <% } else { %>
                <%= jokes[i].setup + jokes[i].delivery %>
                
                <% } %>
              </p>
            </div>
            <% } %>
          </div>
    </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>


